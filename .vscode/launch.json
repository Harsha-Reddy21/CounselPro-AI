{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app", // <--- changed to app.main
        "--reload"
      ],
      "cwd": "${workspaceFolder}/backend", // Run inside backend folder
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "justMyCode": true
    }
  ]
}
